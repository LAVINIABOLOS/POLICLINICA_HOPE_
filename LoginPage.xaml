<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POLICLINICA_HOPE_.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Autentificare" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Telefon" x:Name="PhoneEntry" />
        <Entry Placeholder="Parola" x:Name="PasswordEntry" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
